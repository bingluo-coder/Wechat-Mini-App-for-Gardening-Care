.container {
  padding: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.radio-group {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.picker {
  padding: 10rpx;
  background-color: #f0f0f0;
  margin-bottom: 20rpx;
}

button {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #4CAF50;
  color: white;
}

.report-data {
  background-color: #f0f0f0;
  padding: 20rpx;
  border-radius: 10rpx;
}

.report-data text {
  display: block;
  margin-bottom: 10rpx;
}